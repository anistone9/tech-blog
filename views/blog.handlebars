<!-- Edit existing post created by logged user -->

<div class="text-left blog-list">
  <h3>{{title}} {{format_date date_created}}</h3>
  <h3>{{content}}</h3>
  <p>
    <button class="btn btn-primary blog-update" data-id="{{id}}">Update Post</button>
  </p>
    <p>
    <button class="btn btn-primary blog-delete" data-id="{{id}}">Delete</button>
  </p>
</div>

<div class="old-post-form col-md-12" style="display: none" id="old-post-form">
    <h2>Edit Post</h2>
    <form class="form old-blog-form">
      <div class="form-group">
        <label for="blog-title">Title</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" value="{{title}}" />
      </div>
      <div class="form-group">
        <label for="blog-content">Content</label>
        <textarea class="form-input" id="blog-content" name="blog-content">{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary form-save" data-id="{{id}}">Save</button>
      </div>
    </form>
  </div>

  <script src="/js/blog.js"></script>