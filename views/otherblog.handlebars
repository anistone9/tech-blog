
<!-- Add comments to existing blogs -->
<div class="text-left">
  <h2>{{title}} Posted By {{user.username}} on {{format_date date_created}}</h2>
  <h2>{{content}}</h2>
</div>
<div class="row mt-4">
  <div class="col-md-8">
    <form class="form existing-blog-form">
      <div class="form-group">
        <label for="blog-comment">Comment</label>
        <textarea class="form-input" id="blog-comment" name="blog-comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
